# http://editorconfig.org/

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# break out .yml settings even though they match, because you always want .yml on soaced indentation - it can choke on tabs
[*.yml]
indent_style = space
indent_size = 2
